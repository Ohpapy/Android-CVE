import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;

import java.io.File;
import java.io.IOException;
import java.nio.file.*;
import java.util.stream.Stream;

public class JsonFileProcessor {

    public static void main(String[] args) {
        String directoryPath = "path/to/your/json/directory";
        ObjectMapper objectMapper = new ObjectMapper();

        try (Stream<Path> paths = Files.walk(Paths.get(directoryPath))) {
            paths.filter(Files::isRegularFile)
                 .filter(path -> path.toString().endsWith(".json"))
                 .forEach(path -> processJsonFile(path.toFile(), objectMapper));
        } catch (IOException e) {
            System.err.println("Erreur lors de l'ouverture du r√©pertoire: " + e.getMessage());
        }
    }

    private static void processJsonFile(File file, ObjectMapper objectMapper) {
        try {
            JsonNode jsonNode = objectMapper.readTree(file);
            System.out.println("Fichier: " + file.getName());
            System.out.println("Contenu: " + jsonNode.toPrettyString());
        } catch (IOException ignored) {
            // Ignorer les erreurs de lecture et continuer
        }
    }
}

